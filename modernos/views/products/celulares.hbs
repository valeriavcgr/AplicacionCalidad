<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="utf-8"/>
<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
<title>Gestión de Celulares - ModerNos</title>
<link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect"/>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"/>
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
<script>
tailwind.config = {
    darkMode: "class",
    theme: {
        extend: {
            colors: {
                "primary": "#1173d4",
                "background-light": "#f6f7f8",
                "background-dark": "#101922",
            },
            fontFamily: {
                "display": ["Inter", "sans-serif"],
            },
        },
    },
};
</script>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-gray-800 dark:text-gray-200">
<main class="flex-grow container mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Gestión de Celulares</h2>
        <div class="flex space-x-4">
            <a href="/products/dashboard" class="px-4 py-2 text-sm font-bold bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Volver al Dashboard</a>
            <a href="/category/marcas" id="volverM" class="px-4 py-2 text-sm font-bold bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">Gestión Marcas</a>
            <button id="addBtn" class="px-4 py-2 text-sm font-bold bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">Añadir Celular</button>
        </div>
    </div>

    <div class="bg-white dark:bg-background-dark/50 rounded-xl shadow-lg overflow-hidden">
        <div class="p-6 overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3">Marca</th>
                        <th class="px-6 py-3">Modelo</th>
                        <th class="px-6 py-3 text-center">Stock</th>
                        <th class="px-6 py-3 text-center">Precio</th>
                        <th class="px-6 py-3 text-center">Descripción</th>
                        <th class="px-6 py-3 text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr class="bg-white border-b dark:bg-background-dark dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">{{this.category.name}}</td>
                        <td class="px-6 py-4">{{this.name}}</td>
                        <td class="px-6 py-4 text-center">{{this.stock}}</td>
                        <td class="px-6 py-4 text-center">${{this.price}}</td>
                        <td class="px-6 py-4 text-center">{{this.description}}</td>
                        <td class="px-6 py-4 text-right flex items-center justify-end space-x-2">
                            <button class="edit-btn p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700" 
                                    data-id="{{this.id}}" 
                                    data-name="{{this.name}}" 
                                    data-stock="{{this.stock}}" 
                                    data-price="{{this.price}}" 
                                    data-description="{{this.description}}" 
                                    data-category="{{this.category.id}}">
                                <span class="material-symbols-outlined text-sm text-blue-600 dark:text-blue-400">edit</span>
                            </button>
                            <button class="delete-btn p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700" 
                                    data-id="{{this.id}}" 
                                    data-name="{{this.name}}">
                                <span class="material-symbols-outlined text-sm text-red-600 dark:text-red-400">delete</span>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</main>

<!-- Modal para agregar celular -->
<div id="addModal" class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  <div class="modal-container bg-white dark:bg-background-dark w-11/12 md:max-w-md mx-auto rounded-xl shadow-lg z-50 overflow-y-auto">
    <div class="modal-content py-4 text-left px-6">
      <div class="flex justify-between items-center pb-3">
        <p class="text-2xl font-bold text-gray-900 dark:text-white">Añadir Celular</p>
        <span class="modal-close cursor-pointer text-gray-500 dark:text-gray-400">×</span>
      </div>
      <form id="addForm">
        <input type="text" name="name" placeholder="Modelo" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="price" placeholder="Precio" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="stock" placeholder="Stock" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="category" placeholder="ID de Marca" class="w-full mb-3 p-2 border rounded" required>
        <textarea name="description" placeholder="Descripción" class="w-full mb-3 p-2 border rounded" required></textarea>
        <div class="flex justify-end pt-2">
          <button type="button" class="modal-close px-4 py-2 bg-gray-300 rounded-lg mr-2">Cancelar</button>
          <button type="submit" class="px-4 py-2 bg-primary text-white rounded-lg">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Editar Celular -->
<div id="editModal" class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  <div class="modal-container bg-white dark:bg-background-dark w-11/12 md:max-w-md mx-auto rounded-xl shadow-lg z-50 overflow-y-auto">
    <div class="modal-content py-4 text-left px-6">
      <div class="flex justify-between items-center pb-3">
        <p class="text-2xl font-bold text-gray-900 dark:text-white">Editar Celular</p>
        <span class="modal-close cursor-pointer text-gray-500 dark:text-gray-400">×</span>
      </div>
      <form id="editProductForm">
        <input type="text" name="name" placeholder="Modelo" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="price" placeholder="Precio" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="stock" placeholder="Stock" class="w-full mb-3 p-2 border rounded" required>
        <input type="number" name="category" placeholder="ID de Marca" class="w-full mb-3 p-2 border rounded" required>
        <textarea name="description" placeholder="Descripción" class="w-full mb-3 p-2 border rounded" required></textarea>
        <div class="flex justify-end pt-2">
          <button type="button" class="modal-close px-4 py-2 bg-gray-300 rounded-lg mr-2">Cancelar</button>
          <button type="submit" class="px-4 py-2 bg-primary text-white rounded-lg">Guardar cambios</button>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- Modal eliminar -->
<div id="deleteModal" class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  <div class="modal-container bg-white dark:bg-background-dark w-11/12 md:max-w-md mx-auto rounded-xl shadow-lg z-50 overflow-y-auto">
    <div class="modal-content py-4 text-left px-6">
      <p class="text-2xl font-bold mb-4">Eliminar Celular</p>
      <p class="mb-4 text-gray-700 dark:text-gray-300">¿Deseas eliminar este celular?</p>
      <div class="flex justify-end">
        <button type="button" class="modal-close px-4 py-2 bg-gray-300 rounded-lg mr-2">Cancelar</button>
        <button id="confirmDelete" type="button" class="px-4 py-2 bg-red-600 text-white rounded-lg">Eliminar</button>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const toggleModal = (id) => {
    const modal = document.getElementById(id);
    modal.classList.toggle('opacity-0');
    modal.classList.toggle('pointer-events-none');
    document.body.classList.toggle('modal-active');
  };

  const closeAllModals = () => {
    document.querySelectorAll('.modal').forEach(m => m.classList.add('opacity-0', 'pointer-events-none'));
    document.body.classList.remove('modal-active');
  };

  // abrir modal agregar
  document.getElementById('addBtn').addEventListener('click', () => toggleModal('addModal'));
  document.querySelectorAll('.modal-close').forEach(btn => btn.addEventListener('click', closeAllModals));

  // agregar celular
  document.getElementById('addForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(e.target).entries());
    await fetch('/products', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({
        name: data.name,
        price: Number(data.price),
        stock: Number(data.stock),
        description: data.description,
        category: { id: Number(data.category) }
      })
    });
    location.reload();
  });

// ----- EDITAR CELULAR -----
const editButtons = document.querySelectorAll(".edit-btn");
const editForm = document.getElementById("editProductForm");
let currentProductId = null;

// abrir modal y llenar datos
editButtons.forEach((btn) => {
  btn.addEventListener("click", async () => {
    currentProductId = btn.dataset.id;

    const res = await fetch(`/products/${currentProductId}`);
    const product = await res.json();

    editForm.querySelector("[name='name']").value = product.name;
    editForm.querySelector("[name='price']").value = product.price;
    editForm.querySelector("[name='stock']").value = product.stock;
    editForm.querySelector("[name='description']").value = product.description || "";
    editForm.querySelector("[name='category']").value = product.category?.id || "";

    toggleModal("editModal");
  });
});

// guardar cambios
editForm.addEventListener("submit", async (e) => {
  e.preventDefault();

  const data = Object.fromEntries(new FormData(editForm).entries());

  const body = {
    name: data.name,
    price: Number(data.price),
    stock: Number(data.stock),
    description: data.description,
    category: { id: Number(data.category) },
  };

  const res = await fetch(`/products/${currentProductId}`, {
    method: "PUT",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify(body),
  });

  if (res.ok) {
    toggleModal("editModal");
    location.reload();
  } else {
    const error = await res.text();
    alert("Error al actualizar: " + error);
  }
});

  // eliminar celular
  let deleteId = null;
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      deleteId = btn.dataset.id;
      toggleModal('deleteModal');
    });
  });

  document.getElementById('confirmDelete').addEventListener('click', async () => {
    await fetch(`/products/${deleteId}`, { method: 'DELETE' });
    location.reload();
  });
});
</script>
</body>
</html>
